<div
  class="flex flex-col items-center justify-center w-screen h-screen p-3 bg-blue-900"
>
  <Timer
    class="flex-1 sm:flex-none"
    @minutes={{this.displayMinutes}}
    @seconds={{this.displaySeconds}}
    @mode={{this.currentMode.type}}
    @label={{this.currentMode.label}}
    @isPlaying={{this.isPlaying}}
    @togglePlay={{this.togglePlay}}
    @isAbandonable={{this.isAbandonable}}
    @abandon={{this.abandon}}
  />
  <div class="flex justify-between w-full max-w-xs mt-6 text-white">
    <div class="flex flex-col items-center">
      <span data-test-pomodoros-complete>
        {{this.pomodorosComplete}}/{{this.totalPomodoros}}
      </span>
      <a
        class="mt-1 text-gray-600 hover:text-gray-400"
        href="#"
        {{on "click" this.reset}}
      >
        Reset
      </a>
    </div>
  </div>
</div>