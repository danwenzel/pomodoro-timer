<div
  class="flex flex-col items-center justify-center font-thin text-white"
  ...attributes
>
  <div
    class={{
      concat
      "flex flex-col items-center justify-center w-64 h-64 border-8 rounded-full "
      this.circleColor
    }}
  >
    <div class="mt-4 font-mono text-5xl" data-test-timer-time>
      {{@minutes}}:{{@seconds}}
    </div>
    <div class="mt-3 text-base uppercase" data-test-timer-label>
      {{@label}}
    </div>
  </div>
  <div class="flex w-full">
    <div class="flex justify-center flex-1"></div>
    <div class="flex justify-center flex-1">
      <button
        type="button"
        class="w-16 h-16 mt-6 text-xl border-2 border-gray-600 rounded-full focus:outline-none hover:border-gray-400"
        data-test-toggle-play-button
        {{on "click" @togglePlay}}
      >
        {{#if @isPlaying}}
          ❚❚
        {{else}}
          ▶
        {{/if}}
      </button>
    </div>
    <div class="flex justify-center flex-1">
      {{#if @isAbandonable}}
        <button
          type="button"
          class="w-16 h-16 mt-6 ml-2 text-xl text-red-700 border-2 border-red-700 rounded-full focus:outline-none hover:border-red-400"
          title="abandon"
          data-test-abandon
          {{on "click" @abandon}}
        >
          X
        </button>
      {{/if}}
    </div>
  </div>
</div>