<div class="flex flex-col items-center justify-center font-thin text-white">
  <div
    class="flex flex-col items-center justify-center w-64 h-64 border-8 border-red-600 rounded-full"
  >
    <div class="mt-4 text-5xl">
      <span>
        {{@minutes}}
      </span>
      <span class="-mx-1">
        :
      </span>
      <span>
        {{@seconds}}
      </span>
    </div>
    <div class="mt-3 text-base uppercase">
      {{@label}}
    </div>
  </div>
  <button
    type="button"
    class="w-16 h-16 mt-4 border-2 border-gray-600 rounded-full focus:outline-none hover:border-gray-400"
  >
    <div class="text-xl">
      {{#if @isPlaying}}
        ⏸
      {{else}}
        ▶
      {{/if}}
    </div>
  </button>
</div>